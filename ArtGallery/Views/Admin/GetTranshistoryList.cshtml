@model IEnumerable<ArtGallery.Models.Views.TranshistoryView>

@{
    ViewBag.Title = "GetTranshistoryList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>GetTranshistoryList</h2>

<table id="dataTable" class="table">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                Day create
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UIDTH)
            </th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("EditUser","Admin",new { id=item.IDU})">@item.NameU</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DaycreateTH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UIDTH)
                </td>
                <td>
                    <button type="button" class="btn btn-primary" style="width:auto;height:auto" value="@item.UIDTH" onclick="location.href='@Url.Action("GetTransdetailByID","Admin",new { uid=item.UIDTH})'">Detail</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>

<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $('#dataTable').DataTable();
    });
</script>