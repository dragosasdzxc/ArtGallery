<script type="text/javascript">
    $(document).ready(function () {
        $('.changestatus').click(function () {
            var id = $(this).val();
            var mytarget = $(this);
            if ($(this).text().toString() == "Lock") {
                $.ajax({
                    url: '@Url.Action("LockArt","Admin")',
                    type: 'POST',
                    data: 'id=' + id,
                    success: function () {
                        alert("Lock success!");
                        $(mytarget).html("Unlock"); //not working here
                    }
                });
                return false;
            } else {
                $.ajax({
                    url: '@Url.Action("UnlockArt","Admin")',
                    type: 'POST',
                    data: 'id=' + id,
                    success: function () {
                        alert("Unlock success!");
                        $(mytarget).html("Lock"); //not working here
                    }
                });
                return false;
            };
        });

        $('.deleteart').click(function () {
            var id = $(this).val();
            var row = $(this).closest("tr");
            $.ajax({
                    url: '@Url.Action("DeleteArt","Admin")',
                    type: 'POST',
                    data: 'id=' + id,
                success: function () {
                    row.remove();
                    alert("Delete success!");
                    }
                });
        });
    });


    jQuery(document).ready(function ($) {
        $('#dataTable').DataTable();
    });


</script>